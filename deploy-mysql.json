{
  "kind": "Deployment",
  "metadata": {
    "name": "${MYSQL_DEPLOY_NAME}-${MYSQL_DEPLOY_HASH}"
  },
  "spec": {
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "app": "${MYSQL_IMAGE}"
        },
        "name": "${MYSQL_DEPLOY_NAME}-${MYSQL_DEPLOY_HASH}"
      },
      "spec": {
        "containers": [
          {
            "env": [
              {
                "name": "MYSQL_USER",
                "value": "${MYSQL_USER}"
              },
              {
                "name": "MYSQL_ROOT_PASSWORD",
                "value": "${MYSQL_ROOT_PASSWORD}"
              },
              {
                "name": "MYSQL_PASSWORD",
                "value": "${MYSQL_PASSWORD}"
              },
              {
                "name": "MYSQLDATA",
                "value": "${MYSQLDATA}"
              },
              {
                "name": "SVC_NAME",
                "value": "${MYSQL_SVC_NAME}-${MYSQL_SVC_HASH}" 
              }
           ],
            "image": "${MYSQL_IMAGE}",
            "name": "${MYSQL_DEPLOY_NAME}",
            "resources": {
              "requests": {
                "cpu": "150m",
                "memory": "200Mi"
              }
            },
            "volumeMounts": [
              {
                "mountPath": "${MYSQLPATH}",
                "name": "default-volume",
                "subPath": "${MYSQL_DEPLOY_NAME}-${MYSQL_DEPLOY_HASH}${MYSQLPATH}"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "default-volume"
          }
        ]
      }
    }
  }
}
